mixin parallax(ops)
  - attrs = ops.attrs || {}
  .c-parallax
    .c-parallax__wrapper.text--primary-blue(data-js-bg-loader, data-background="#{paths.img}hero-1.jpg", data-background-mobile="#{paths.img}hero-1.jpg", data-btn-next="#{paths.img}ic-angle-right.png", data-btn-prev="#{paths.img}ic-angle-left.png")&attributes(attrs)
      .c-parallax__content
        .c-parallax__text.font--clio-regular
          .c-parallax__text__body!=ops.text
          .c-intro__footer.l-padding-top-1
            a.c-input.c-input--next(href='#')
              span.text--uppercase=view_more
          .c-parallax__side-img
            img(src=paths.img + 'hero-layer.png', alt='')
      .c-parallax__content
        .c-parallax__text.font--clio-regular
          h1 Slide 2
          .c-parallax__text__body Lorem ipsum